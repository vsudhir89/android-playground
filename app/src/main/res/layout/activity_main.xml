<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sample.sudhir.playground.MainActivity">

    <Button
        android:id="@+id/btnPostOfficeStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_office"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/btnPersonOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Alex"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="207dp"
        android:layout_marginLeft="78dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/btnPersonTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Vicky"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="207dp"
        android:layout_marginRight="78dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btnEndPostalService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_postal_service"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPostOfficeStart"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
